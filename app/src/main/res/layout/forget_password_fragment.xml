<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waqasjutt.event_organizer.ForgetPassword_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageexamprep"
            android:layout_width="300px"
            android:layout_height="320px"
            android:layout_gravity="center"
            android:layout_marginTop="20pt"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editforgotuser"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/email_signup"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint=" Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <!--<ImageView-->
            <!--android:id="@+id/imageforgotmain"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="42dp"-->
            <!--android:layout_marginLeft="10pt"-->
            <!--android:src="@drawable/user_signup" />-->


            <!--<EditText-->
            <!--android:id="@+id/editforgotuser"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginRight="50dp"-->
            <!--android:hint="Enter Registered Email"-->
            <!--android:inputType="text" />-->


        </LinearLayout>

        <View
            android:id="@+id/Line_Email"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="10dp"
            android:background="#000000" />

        <Button
            android:layout_marginBottom="30dp"
            android:id="@+id/btnfornext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/loginbutton_selector"
            android:gravity="center"
            android:text="NEXT" />

    </LinearLayout>

</LinearLayout>