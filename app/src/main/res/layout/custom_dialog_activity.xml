<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_for_layout"
    android:orientation="vertical"
    tools:context="com.example.waqasjutt.event_organizer.CustomDialog_Class">

    <ImageView
        android:id="@+id/ivCloseApp"
        android:layout_width="@dimen/Padding_20"
        android:layout_height="@dimen/Padding_20"
        android:layout_gravity="right"
        android:background="@drawable/close_button_selector" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/Padding_10"
        android:layout_marginTop="-8dp"
        android:text="Close Event Organizer"
        android:textColor="@android:color/white"
        android:textSize="@dimen/Text_Size_17"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/Padding_10"
        android:layout_marginLeft="@dimen/Padding_15"
        android:layout_marginTop="@dimen/Padding_10"
        android:text="Do you want to exit?"
        android:textColor="@android:color/white"
        android:textSize="@dimen/Padding_15"
        android:textStyle="normal"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_layout_otp"
        android:orientation="horizontal"
        android:padding="@dimen/Padding_5">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/Padding_100"
            android:layout_height="@dimen/Padding_30"
            android:background="@drawable/round_button_yes"
            android:clickable="true"
            android:text="Yes"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="@dimen/Padding_100"
            android:layout_height="@dimen/Padding_30"
            android:layout_marginLeft="@dimen/Padding_5"
            android:background="@drawable/round_button_no"
            android:clickable="true"
            android:text="No"
            android:textColor="@color/blue"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
